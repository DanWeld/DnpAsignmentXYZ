@page "/posts"
@inject IPostService PostService
@inject NavigationManager Navigation

<PageTitle>Posts</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Posts</h1>
        <a href="/posts/create" class="btn btn-primary">Create New Post</a>
    </div>
    
    <div class="card mb-3">
        <div class="card-body">
            <h5>Filter Posts</h5>
            <div class="row">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Title contains..." @bind="titleFilter"/>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Author name contains..." @bind="authorFilter"/>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-secondary" @onclick="LoadPosts">Search</button>
                    <button class="btn btn-outline-secondary" @onclick="ClearFilters">Clear</button>
                </div>
            </div>
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else if (posts == null || !posts.Any())
    {
        <div class="alert alert-info" role="alert">
            No posts found.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var post in posts)
            {
                <a href="/posts/@post.Id" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@post.Title</h5>
                        <small>ID: @post.Id</small>
                    </div>
                    @if (!string.IsNullOrEmpty(post.AuthorUsername))
                    {
                        <small class="text-muted">by @post.AuthorUsername</small>
                    }
                    else
                    {
                        <small class="text-muted">by User #@post.UserId</small>
                    }
                </a>
            }
        </div>
    }
</div>

@code {
    private IEnumerable<PostDto>? posts;
    private string errorMessage = "";
    private bool isLoading = true;
    private string titleFilter = "";
    private string authorFilter = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadPosts();
    }

    private async Task LoadPosts()
    {
        try
        {
            isLoading = true;
            errorMessage = "";
            
            string? titleSearch = string.IsNullOrWhiteSpace(titleFilter) ? null : titleFilter;
            string? authorSearch = string.IsNullOrWhiteSpace(authorFilter) ? null : authorFilter;
            
            posts = await PostService.GetManyAsync(
                titleContains: titleSearch,
                authorNameContains: authorSearch,
                includeAuthor: true
            );
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load posts: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task ClearFilters()
    {
        titleFilter = "";
        authorFilter = "";
        await LoadPosts();
    }
}

