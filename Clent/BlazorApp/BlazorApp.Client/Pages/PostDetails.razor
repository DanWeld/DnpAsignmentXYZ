@page "/posts/{PostId:int}"
@inject IPostService PostService
@inject ICommentService CommentService
@inject NavigationManager Navigation

<PageTitle>@(post?.Title ?? "Post Details")</PageTitle>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
        <a href="/posts" class="btn btn-secondary">Back to Posts</a>
    }
    else if (post != null)
    {
        <div class="mb-3">
            <a href="/posts" class="btn btn-sm btn-secondary">‚Üê Back to Posts</a>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h2>@post.Title</h2>
                <small class="text-muted">
                    by @(post.AuthorUsername ?? $"User #{post.UserId}")
                </small>
            </div>
            <div class="card-body">
                <p class="card-text" style="white-space: pre-wrap;">@post.Body</p>
            </div>
        </div>
        
        <!-- Comments Section -->
        <div class="card">
            <div class="card-header">
                <h4>Comments (@comments.Count())</h4>
            </div>
            <div class="card-body">
                @if (!comments.Any())
                {
                    <p class="text-muted">No comments yet. Be the first to comment!</p>
                }
                else
                {
                    @foreach (var comment in comments)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between">
                                <strong>@(comment.Username ?? $"User #{comment.UserId}")</strong>
                                <small class="text-muted">Comment #@comment.Id</small>
                            </div>
                            <p class="mt-2 mb-0" style="white-space: pre-wrap;">@comment.Body</p>
                        </div>
                    }
                }
                
                <!-- Add Comment Form -->
                <div class="mt-4">
                    <h5>Add a Comment</h5>
                    @if (!string.IsNullOrEmpty(commentError))
                    {
                        <div class="alert alert-danger" role="alert">
                            @commentError
                        </div>
                    }
                    <div class="mb-3">
                        <label for="userId" class="form-label">User ID *</label>
                        <input type="number" class="form-control" id="userId" @bind="commentUserId"/>
                        <small class="form-text text-muted">For now, use 1 or an existing user ID</small>
                    </div>
                    <div class="mb-3">
                        <label for="commentBody" class="form-label">Comment *</label>
                        <textarea class="form-control" id="commentBody" rows="3" @bind="commentBody"></textarea>
                    </div>
                    <button class="btn btn-primary" @onclick="AddComment" disabled="@isAddingComment">
                        @if (isAddingComment)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        Add Comment
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int PostId { get; set; }
    
    private PostDto? post;
    private IEnumerable<CommentDto> comments = new List<CommentDto>();
    private string errorMessage = "";
    private string commentError = "";
    private bool isLoading = true;
    private bool isAddingComment = false;
    private string commentBody = "";
    private int commentUserId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadPost();
    }

    private async Task LoadPost()
    {
        try
        {
            isLoading = true;
            errorMessage = "";
            
            post = await PostService.GetSingleAsync(PostId, includeComments: true, includeAuthor: true);
            comments = post.Comments ?? new List<CommentDto>();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load post: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task AddComment()
    {
        commentError = "";
        
        if (string.IsNullOrWhiteSpace(commentBody))
        {
            commentError = "Comment body is required";
            return;
        }
        
        if (commentUserId <= 0)
        {
            commentError = "Valid User ID is required";
            return;
        }

        try
        {
            isAddingComment = true;
            var createDto = new CreateCommentDto
            {
                Body = commentBody,
                UserId = commentUserId
            };
            
            await CommentService.AddCommentToPostAsync(PostId, createDto);
            
            // Clear form and reload
            commentBody = "";
            await LoadPost();
        }
        catch (Exception ex)
        {
            commentError = $"Failed to add comment: {ex.Message}";
        }
        finally
        {
            isAddingComment = false;
        }
    }
}

