@page "/users/create"
@inject IUserService UserService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create User</PageTitle>

<div class="container mt-4">
    <h1>Create New User</h1>
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @errorMessage
        </div>
    }
    
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" role="alert">
            <strong>Success!</strong> @successMessage
        </div>
    }
    
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label for="username" class="form-label">Username *</label>
                <input type="text" class="form-control" id="username" @bind="username" @bind:event="oninput" />
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password *</label>
                <input type="password" class="form-control" id="password" @bind="password" @bind:event="oninput" />
            </div>
            
            <div class="mb-3">
                <label for="name" class="form-label">Name (Optional)</label>
                <input type="text" class="form-control" id="name" @bind="name" @bind:event="oninput" />
            </div>
            
            <button type="button" class="btn btn-primary" @onclick="CreateUserAsync" disabled="@isCreating">
                @if (isCreating)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create User</span>
                }
            </button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
    
    @if (isCreating)
    {
        <div class="mt-3">
            <div class="alert alert-info">
                <div class="spinner-border spinner-border-sm me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                Creating user, please wait...
            </div>
        </div>
    }
</div>

@code {
    private string username = "";
    private string password = "";
    private string? name = "";
    private string errorMessage = "";
    private string successMessage = "";
    private bool isCreating = false;

    private async Task CreateUserAsync()
    {
        Console.WriteLine("CreateUserAsync called");
        errorMessage = "";
        successMessage = "";
        
        try
        {
            // Validation
            if (string.IsNullOrWhiteSpace(username))
            {
                errorMessage = "Username is required";
                return;
            }
            
            if (string.IsNullOrWhiteSpace(password))
            {
                errorMessage = "Password is required";
                return;
            }

            isCreating = true;
            StateHasChanged();
            
            Console.WriteLine($"Creating user: {username}");
            
            var createDto = new CreateUserDto
            {
                Username = username.Trim(),
                Password = password,
                Name = string.IsNullOrWhiteSpace(name) ? null : name.Trim()
            };
            
            Console.WriteLine("Calling UserService.AddUserAsync...");
            var result = await UserService.AddUserAsync(createDto);
            Console.WriteLine($"User created with ID: {result.Id}");
            
            successMessage = $"User '{result.Username}' created successfully!";
            await Task.Delay(1000); // Show success message briefly
            
            Navigation.NavigateTo("/");
        }
        catch (HttpRequestException httpEx)
        {
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
            errorMessage = $"Network error: {httpEx.Message}. Make sure the WebAPI is running on https://localhost:7005";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");
            errorMessage = $"Failed to create user: {ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }
}

