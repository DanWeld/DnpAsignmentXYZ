@page "/posts/create"
@inject IPostService PostService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Create Post</PageTitle>

<div class="container mt-4">
    <h1>Create New Post</h1>
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @errorMessage
        </div>
    }
    
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" role="alert">
            <strong>Success!</strong> @successMessage
        </div>
    }
    
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label for="title" class="form-label">Title *</label>
                <input type="text" class="form-control" id="title" @bind="title" @bind:event="oninput" />
            </div>
            
            <div class="mb-3">
                <label for="body" class="form-label">Body *</label>
                <textarea class="form-control" id="body" rows="10" @bind="body" @bind:event="oninput"></textarea>
            </div>
            
            <div class="mb-3">
                <label for="userId" class="form-label">User ID *</label>
                <input type="number" class="form-control" id="userId" @bind="userId" @bind:event="oninput" />
                <small class="form-text text-muted">Enter 1 or the ID of an existing user</small>
            </div>
            
            <button type="button" class="btn btn-primary" @onclick="CreatePostAsync" disabled="@isCreating">
                @if (isCreating)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create Post</span>
                }
            </button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
    
    @if (isCreating)
    {
        <div class="mt-3">
            <div class="alert alert-info">
                <div class="spinner-border spinner-border-sm me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                Creating post, please wait...
            </div>
        </div>
    }
</div>

@code {
    private string title = "";
    private string body = "";
    private int userId = 1;
    private string errorMessage = "";
    private string successMessage = "";
    private bool isCreating = false;

    private async Task CreatePostAsync()
    {
        Console.WriteLine("CreatePostAsync called");
        errorMessage = "";
        successMessage = "";
        
        try
        {
            // Validation
            if (string.IsNullOrWhiteSpace(title))
            {
                errorMessage = "Title is required";
                return;
            }
            
            if (string.IsNullOrWhiteSpace(body))
            {
                errorMessage = "Body is required";
                return;
            }
            
            if (userId <= 0)
            {
                errorMessage = "Valid User ID is required";
                return;
            }

            isCreating = true;
            StateHasChanged();
            
            Console.WriteLine($"Creating post: {title}");
            
            var createDto = new CreatePostDto
            {
                Title = title.Trim(),
                Body = body.Trim(),
                UserId = userId
            };
            
            Console.WriteLine("Calling PostService.AddPostAsync...");
            var created = await PostService.AddPostAsync(createDto);
            Console.WriteLine($"Post created with ID: {created.Id}");
            
            successMessage = $"Post '{created.Title}' created successfully!";
            await Task.Delay(1000); // Show success message briefly
            
            Navigation.NavigateTo($"/posts/{created.Id}");
        }
        catch (HttpRequestException httpEx)
        {
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
            errorMessage = $"Network error: {httpEx.Message}. Make sure the WebAPI is running and the user ID exists.";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");
            errorMessage = $"Failed to create post: {ex.Message}";
        }
        finally
        {
            isCreating = false;
            StateHasChanged();
        }
    }
}

